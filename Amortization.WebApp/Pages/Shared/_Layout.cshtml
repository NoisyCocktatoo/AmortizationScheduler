@using Amortization.Application.Constants
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] @GlobalConstants.AppName</title>
    @Html.Partial("_PageHeader")
</head>
<body>

    <div class="body-container">
      <nav class="navbar navbar-expand-lg navbar-fixed navbar-blue">
        @Html.Partial("_Navbar")
      </nav>
      <div class="main-container bgc-white">

        <div id="sidebar" class="sidebar sidebar-fixed expandable sidebar-light">
          <div class="sidebar-inner">

            <div class="flex-grow-1 ace-scroll" data-ace-scroll="{}">
                @Html.Partial("_Sidebar")
            </div>
          </div>
        </div>

        <div role="main" class="main-content">

          <div class="page-content container container-plus">
         
            @RenderBody()
            <div id="holder"></div>
          </div>
        </div>
      </div>
    </div>























































