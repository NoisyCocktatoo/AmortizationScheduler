@model Amortization.WebApp.Pages.Buyers.IndexModel

<div class="d-flex flex-column align-items-center">
    <input type="hidden" asp-for="Buyer.BuyerId" id="buyerId" />
    <input type="hidden" asp-for="Buyer.CreateDate" />
    <div class="col-lg-12">
        <label for="buyerName" class="mr-3 font-weight-bold">
            Name<span class="text-danger">*</span>
        </label>
        <input type="text" class="form-control form-control-md shadow-none" id="buyerName" asp-for="Buyer.Name" aqreq>

        <label for="buyerImprint" class="mr-3 font-weight-bold">
            Buyer Id<span class="text-danger">*</span>
        </label>
        <input type="text" class="form-control form-control-md shadow-none" id="buyerImprint" asp-for="Buyer.Imprint_Id" readonly>
        <label for="buyerAddress" class="mr-3 font-weight-bold">
            Address<span class="text-danger">*</span>
        </label>
        <input type="text" class="form-control form-control-md shadow-none" id="buyerAddress" asp-for="Buyer.Address" aqreq>
    </div>
</div>
<ejs-scripts></ejs-scripts>